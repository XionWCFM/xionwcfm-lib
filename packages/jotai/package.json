    "@types/react": "catalog:react18",
    "@repo/typescript-config": "workspace:*",
    "happy-dom": "catalog:",
    "jotai": "^2.9.3",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:",
    "vitest-fetch-mock": "catalog:"
